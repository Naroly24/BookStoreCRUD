@model BookStoreCRUD.Web.Models.Book

@{
    ViewBag.Title = "Detalles del Libro";
}

<h2>Detalles del Libro</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Model.Genre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Fecha de Publicación</dt>
        <dd class="col-sm-10">@Model.PublishedDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Cantidad en Stock</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
