@model BookStoreCRUD.Web.Models.Book

@{
    ViewBag.Title = "Editar Libro";
}

<h2>Editar Libro</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Title">Título</label>
        <input type="text" class="form-control" asp-for="Title" required />
    </div>
    <div class="form-group">
        <label for="Author">Autor</label>
        <input type="text" class="form-control" asp-for="Author" required />
    </div>
    <div class="form-group">
        <label for="Genre">Género</label>
        <input type="text" class="form-control" asp-for="Genre" />
    </div>
    <div class="form-group">
        <label for="Price">Precio</label>
        <input type="number" class="form-control" asp-for="Price" required step="0.01" />
    </div>
    <div class="form-group">
        <label for="PublishedDate">Fecha de Publicación</label>
        <input type="date" class="form-control" asp-for="PublishedDate" required />
    </div>
    <div class="form-group">
        <label for="StockQuantity">Cantidad en Stock</label>
        <input type="number" class="form-control" asp-for="StockQuantity" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
